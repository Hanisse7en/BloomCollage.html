 <script>
   function changeToFocus(element){
     document.getElementById("email").style.backgroundColor = "grey";
     }
     function changetoUpperCase(element){
       element.value=element.value.toUpperCase();
     }
     function changeToBlur(element){
       element.style.backgroundColor="gray";
     }
     function showSuccessModal(e){
       e.preventDefault();
       new bootstrap.Modal(document.getElementById("successModal")).show();
     }
     document.getElementById("studentForm").addEventListener("submit",showSuccessModal);
 </script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
 
